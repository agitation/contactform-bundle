<div class='contactform'>
    <form role="form">
        <div class="form-group">
            <label for="contactform-name" class='sr-only'>{{ t("your name") }}</label>
            <input type="text" class="form-control" id="contactform-name" name='name' placeholder='{{ t("your name") }}'>
        </div>
        <div class="form-group">
            <label for="contactform-email" class='sr-only'>{{ t("your e-mail address") }}</label>
            <input type="email" class="form-control" id="contactform-email" name='email' placeholder='{{ t("your e-mail address") }}'>
        </div>
        <div class="form-group">
            <label for="contactform-subject" class='sr-only'>{{ t("subject") }}</label>
            <input type="text" class="form-control" id="contactform-subject" name='subject' placeholder='{{ t("subject") }}'>
        </div>
        <div class="form-group">
            <label for="contactform-message" class='sr-only'>{{ t("message") }}</label>
            <textarea class="form-control" id="contactform-message" name='message' placeholder="{{ t("message") }}"></textarea>
        </div>
        <button type="submit" class="btn btn-default">{{ t("Submit") }}</button>
    </form>

    <div class="thankyou panel panel-success hidden">
        <div class="panel-heading">
            <h3 class="panel-title">{{ t("Message sent") }}</h3>
        </div>
        <div class="panel-body">
            <p>{{ t("Your message has been sent, thank you. We will get back to you as soon as possible.") }}</p>
        </div>
    </div>
</div>